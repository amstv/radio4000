<div class="Container Container--full">
	<div class=" Grid">
		<div class="Grid-cell Grid-cell--single">
			{{tracks-list-tags filter="" tracks=model.tracks}}	
		</div>
		<div class="Grid-cell Grid-cell--double">
			{{#if model.tracks.isFulfilled}}
				{{#tracks-list
					items=model.tracks
					grouped=true
					numbered=false as |item|}}
					{{track-item track=item}}
				{{/tracks-list}}

				{{#unless model.tracks.length}}
					<p>This radio has no tracks yet</p>
				{{/unless}}
			{{else}}
				{{is-loading}}
			{{/if}}
		</div>
	</div>

	{{outlet}}
</div>
