{{title "Search Radio4000" replace=true}}

<section class="Section Container Container--full">

	{{#list-manipulation
		sortKey=sortKey
		sortDirection=sortDirection
		list=filteredChannels
		as |manipulatedList|
	}}
		<div class="BtnGroups BtnGroups--noPaddingButton">
			{{#btn-group}}
				<label class="Label Label--horizontal">
					<span class="Label-title">Search</span>
					{{jets-search
						contentTag=".Grid"
						content=filteredChannels
						value=search
						title="Search the titles and descriptions of all radio channels"
						placeholder='all radio channels'
					}}
				</label>
				<button type="button" class="Btn" disabled={{noSearch}} title="Clear search query, fresh start!" {{action 'clearSearch'}}>x</button>
			{{/btn-group}}
			{{#btn-group}}
				<label class="Label Label--horizontal">
					<span class="Label-title">Sort by</span>
					{{link-to "Activity" "channels.search" (query-params sort="updated")
						class="Btn" title="Sort by activity, last updated date"}}
					{{link-to "Age" "channels.search" (query-params sort="created")
						class="Btn" title="Sort by age, created date"}}
					{{link-to "A-Z" "channels.search" (query-params sort="title")
						class="Btn" title="Sort by alphabetic order of titles"}}
				</label>
			{{/btn-group}}
			{{#btn-group}}
				{{link-to "↑" "channels.search" (query-params sortDirection="asc")
					class="Btn" title="Sort direction: ascending"}}
				{{link-to "↓" "channels.search" (query-params sortDirection="desc")
					class="Btn" title="Sort direction: descending"}}
			{{/btn-group}}
		</div>

		<div class="Grid">
			<div class="Grid-cell">
				<p>Each radio is <a href="{{href-to 'about'}}">curated by one human</a>.
				Listen, discover someone's personal selection.</p>
				<p>{{play-random-channel class="Btn--full"}}</p>
			</div> 
			{{#vertical-collection manipulatedList
				estimateHeight=333
				bufferSize=8
				as |item|}}
				<div class="Grid-cell">
					{{channel-card-lite channel=item}}
				</div>
			{{/vertical-collection}}
		</div>
	{{/list-manipulation}}
</section>

<section class="Section Container">
	<p>
		Not sure what to listen to?
		Try one of the <a href="{{href-to 'channels'}}">featured radios</a>.
	</p>
</section>